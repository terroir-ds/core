{
  "terminal.integrated.env.osx": {
    "PATH": "${workspaceFolder}/node_modules/.bin"
  },
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "git.rebaseWhenSync": true,
  "git.autofetch": true,
  "git.enableSmartCommit": true,
  "prettier.requireConfig": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "never"
  },
  "eslint.validate": ["javascript", "typescript", "javascriptreact", "typescriptreact"],
  "eslint.enable": true,
  "eslint.lintTask.enable": true,
  "eslint.format.enable": true,
  "npm.packageManager": "npm",
  "search-node-modules.path": "node_modules",
  "javascript.format.enable": true,
  "javascript.format.semicolons": "insert",
  "javascript.preferences.quoteStyle": "single",
  "cSpell.customDictionaries": {
    "project": {
      "name": "project",
      "path": "${workspaceFolder}/.vscode/cspell.json",
      "addWords": true,
      "scope": "workspace"
    }
  },
  "editor.fontFamily": "'Intel One Mono', 'Roboto Mono for Powerline', monospace",
  "editor.fontSize": 13,
  "// Note: cSpell configuration is now in .vscode/cspell.json": "Agents can edit this file"
}
