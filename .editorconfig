# EditorConfig helps maintain consistent coding styles across different editors
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Markdown files
[*.{md,markdown}]
trim_trailing_whitespace = false
max_line_length = 80

# JSON, YAML files
[*.{json,yml,yaml}]
indent_size = 2

# TypeScript/JavaScript files
[*.{js,jsx,ts,tsx,mjs,cjs}]
indent_size = 2
quote_type = single

# Package files
[{package.json,tsconfig.json,*.config.{js,ts}}]
indent_size = 2

# Makefiles require tabs
[Makefile]
indent_style = tab

# Shell scripts
[*.sh]
indent_size = 2

# CSS/SCSS files
[*.{css,scss,sass}]
indent_size = 2

# HTML files
[*.{html,svg}]
indent_size = 2

# Ignore generated files
[{dist/**,coverage/**,*.min.js}]
insert_final_newline = ignore
trim_trailing_whitespace = ignore