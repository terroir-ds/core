# Only run on branch checkout (not file checkout)
if [ "$3" = "1" ]; then
  prev_branch=$1
  new_branch=$2
  
  # Check if package files changed between branches
  if git diff --name-only "$prev_branch" "$new_branch" | grep -E "(package\.json|pnpm-lock\.yaml)" > /dev/null 2>&1
  then
    echo "ðŸ“¦ Dependencies differ between branches, running pnpm install..."
    pnpm install
  fi
  
  # Clean generated files that might differ between branches
  if [ -d "dist" ]; then
    echo "ðŸ§¹ Cleaning dist directory..."
    rm -rf dist
  fi
  
  if [ -d ".next" ]; then
    echo "ðŸ§¹ Cleaning .next directory..."
    rm -rf .next
  fi
fi