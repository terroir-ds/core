{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "composite": true,
    "removeComments": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "paths": {
      "@tokens/*": ["./tokens/*"],
      "@scripts/*": ["./scripts/*"],
      "@assets/*": ["./assets/*"],
      "@core/*": ["./packages/core/src/*"],
      "@react/*": ["./packages/react/src/*"],
      "@web-components/*": ["./packages/web-components/src/*"]
    }
  },
  "include": ["scripts/**/*", "packages/**/*", "tokens/**/*", "tests/**/*"],
  "exclude": ["node_modules", "dist", "build", "coverage", "**/*.spec.ts", "**/*.test.ts"],
  "references": [
    { "path": "./packages/core" },
    { "path": "./packages/react" },
    { "path": "./packages/web-components" }
  ]
}
