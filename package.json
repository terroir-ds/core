{
  "name": "terroir-core-monorepo",
  "version": "0.0.0",
  "private": true,
  "description": "A comprehensive, accessible design system built with Material Color Utilities",
  "keywords": [
    "design-system",
    "design-tokens",
    "style-dictionary",
    "material-design",
    "accessibility",
    "wcag",
    "react",
    "typescript"
  ],
  "homepage": "https://github.com/terroir-ds/core#readme",
  "bugs": {
    "url": "https://github.com/terroir-ds/core/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/terroir-ds/core.git"
  },
  "license": "MIT",
  "author": "Terroir Core Contributors",
  "maintainers": [
    "Joshua Hall <josh@yaplabs.com>"
  ],
  "type": "module",
  "files": [
    "packages/*/dist",
    "packages/*/README.md",
    "packages/*/LICENSE",
    "packages/*/package.json"
  ],
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "assets:build": "pnpm assets:icons && pnpm assets:images && pnpm assets:fonts",
    "assets:fonts": "node scripts/optimize-fonts.js",
    "assets:icons": "node scripts/build-svg-assets.js",
    "assets:images": "node scripts/generate-images.js",
    "assets:watch": "nodemon -w assets -e svg,png,jpg -x 'pnpm assets:build'",
    "build:all": "turbo build",
    "build:ts": "turbo build --filter='./packages/*'",
    "changeset": "changeset",
    "changeset:add": "changeset add",
    "changeset:publish": "pnpm build:all && changeset publish",
    "changeset:status": "changeset status",
    "changeset:version": "changeset version",
    "clean": "del dist 'packages/*/dist'",
    "dev": "turbo dev",
    "docs:api": "typedoc --options .docs/typedoc.json",
    "docs:api:watch": "typedoc --options .docs/typedoc.json --watch",
    "docs:build": "pnpm docs:api && cd packages/docs-site && pnpm build",
    "docs:dev": "cd packages/docs-site && pnpm dev",
    "docs:generate": "node scripts/generate-docs.js",
    "docs:preview": "cd packages/docs-site && pnpm preview",
    "docs:serve": "npx serve dist/storybook",
    "fix": "./scripts/utils/fix-all.sh",
    "fix:all": "pnpm fix",
    "lint": "turbo lint --filter='./packages/*'",
    "lint:fix": "pnpm lint:ts:fix && pnpm lint:md:fix && pnpm lint:prettier:fix",
    "lint:md": "markdownlint-cli2 '**/*.{md,markdown}'",
    "lint:md:fix": "markdownlint-cli2 '**/*.{md,markdown}' --fix",
    "lint:md:fix-blocks": "node scripts/utils/fix-markdown-code-blocks.js",
    "lint:prettier": "prettier --check '**/*.{json,yml,yaml}'",
    "lint:prettier:fix": "prettier --write '**/*.{json,yml,yaml}'",
    "lint:ts": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:ts:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "packages:build": "turbo build --filter='./packages/*'",
    "packages:test": "turbo test --filter='./packages/*'",
    "prepare": "husky",
    "release": "pnpm build:all && pnpm changeset publish",
    "release:major": "pnpm release -- --major",
    "release:minor": "pnpm release -- --minor",
    "release:patch": "pnpm release -- --patch",
    "setup": "pnpm install && pnpm tokens:build",
    "size": "size-limit",
    "size:watch": "size-limit --watch",
    "standardize:scripts": "node scripts/utils/standardize-package-scripts.js",
    "storybook:build": "storybook build -o dist/storybook",
    "storybook:dev": "storybook dev -p 6006",
    "test": "turbo test",
    "test:a11y": "node scripts/test-accessibility.js",
    "test:contrast": "node scripts/test-contrast.js",
    "test:coverage": "vitest run --coverage --workspace vitest.workspace.ts",
    "test:coverage:ci": "vitest run --config vitest.config.coverage.ts",
    "test:dev": "vitest --workspace vitest.workspace.ts",
    "test:lint": "pnpm tokens:lint && eslint . --ext .ts,.tsx,.js,.jsx && pnpm lint:md",
    "test:type": "tsc --noEmit -p tsconfig.typecheck.json",
    "test:unit": "vitest",
    "test:unit:logger": "vitest run lib/utils/__tests__/logger",
    "test:visual": "playwright test",
    "test:watch": "vitest watch",
    "tokens:build": "node scripts/generate-material-colors.mjs && node scripts/build-tokens.mjs",
    "tokens:lint": "node scripts/lint-tokens.js",
    "tokens:watch": "nodemon -w tokens -e json,js -x 'pnpm tokens:build'"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --max-warnings 0"
    ],
    "*.{md,markdown}": [
      "markdownlint-cli2 --fix --no-globs",
      "prettier --write"
    ],
    "*.{json,yml,yaml}": [
      "prettier --write"
    ],
    "package.json": [
      "pnpm exec sort-package-json"
    ]
  },
  "devDependencies": {
    "@anthropic-ai/claude-code": "^1.0.35",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.5",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.30.0",
    "@material/material-color-utilities": "^0.3.0",
    "@microsoft/tsdoc": "^0.15.1",
    "@playwright/test": "^1.53.1",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.4",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^12.0.2",
    "@size-limit/file": "^11.2.0",
    "@size-limit/preset-small-lib": "^11.2.0",
    "@types/node": "^24.0.7",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "@vitest/coverage-v8": "^3.2.4",
    "del-cli": "^6.0.0",
    "eslint": "^9.30.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.2",
    "markdownlint-cli2": "^0.18.1",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.6.2",
    "rollup": "^4.44.1",
    "rollup-plugin-dts": "^6.2.1",
    "semantic-release": "^24.2.5",
    "sort-package-json": "^3.3.1",
    "style-dictionary": "^5.0.0",
    "tsx": "^4.20.3",
    "turbo": "^2.5.4",
    "typedoc": "^0.28.6",
    "typedoc-plugin-markdown": "^4.7.0",
    "typescript": "^5.8.3",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@10.12.3",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
