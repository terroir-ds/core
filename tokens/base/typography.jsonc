        "$type": "dimension"
      },
      "4xl": {
        "$value": 36,
        "$description": "36px - Heading level 2",
        "$type": "dimension"
      },
      "5xl": {
        "$value": 48,
        "$description": "48px - Heading level 1",
        "$type": "dimension"
      },
      "6xl": {
        "$value": 60,
        "$description": "60px - Display text",
        "$type": "dimension"
      }
    },
    
