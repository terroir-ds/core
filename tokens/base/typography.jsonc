{
  // Typography tokens for the Terroir Design System
  // Defines font families, sizes, weights, and line heights
  "typography": {
    "$description": "Typography system tokens",
    
    // Font families with system font fallbacks
    "fontFamily": {
      "$description": "Font family stacks",
      
      "sans": {
        "$value": "-apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif",
        "$description": "System sans-serif font stack",
        "$type": "fontFamily"
      },
      "serif": {
        "$value": "Georgia, Cambria, 'Times New Roman', Times, serif",
        "$description": "System serif font stack",
        "$type": "fontFamily"
      },
      "mono": {
        "$value": "'SF Mono', Monaco, 'Cascadia Code', 'Roboto Mono', Consolas, 'Courier New', monospace",
        "$description": "System monospace font stack",
        "$type": "fontFamily"
      }
    },
    
    // Font sizes using modular scale (1.25 ratio)
    "fontSize": {
      "$description": "Font size scale using 1.25 ratio",
      
      "xs": {
        "$value": 12,
        "$description": "12px - Extra small text",
