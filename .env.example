# 1Password Integration Configuration
# Copy this file to .env and fill in your values

# Required: Your 1Password service account token
# Get one at: https://developer.1password.com/docs/service-accounts/
OP_SERVICE_ACCOUNT_TOKEN=ops_foobarwoo123456

# Optional: Your 1Password account URL (if different from default)
# OP_ACCOUNT=my.1password.com

# Optional: Custom names for items in 1Password
# If not set, the script will try common default names
# GIT_SIGNING_KEY_ITEM="GitHub SSH Key"
# GIT_CONFIG_ITEM="Git Configuration"

# Logging verbosity: 0=ERROR, 1=WARN, 2=INFO, 3=DEBUG
# LOG_LEVEL=1

# Note: The script uses 'op item get' which searches across all vaults
# that the service account has access to. Make sure your service
# account has access to the vault containing your SSH keys.

# Development Environment Settings
NODE_ENV=development
DESIGN_SYSTEM_VERSION=0.1.0

# Asset Optimization
OPTIMIZE_IMAGES=true
GENERATE_WEBP=true

# Testing Configuration
STRICT_CONTRAST=true
VISUAL_REGRESSION_THRESHOLD=0.1