    "lineHeight": {
      "$description": "Line height scale",
      
      "tight": {
        "$value": 1.25,
        "$description": "1.25 - Tight line height for headings",
        "$type": "number"
      },
      "snug": {
        "$value": 1.375,
        "$description": "1.375 - Snug line height",
        "$type": "number"
