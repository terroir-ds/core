      "base": {
        "$value": 16,
        "$description": "16px - Base body text",
        "$type": "dimension"
      },
      "lg": {
        "$value": 18,
        "$description": "18px - Large text",
        "$type": "dimension"
      },
      "xl": {
        "$value": 20,
        "$description": "20px - Extra large text",
        "$type": "dimension"
      },
      "2xl": {
        "$value": 24,
        "$description": "24px - Heading level 4",
        "$type": "dimension"
      },
      "3xl": {
        "$value": 30,
