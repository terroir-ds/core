    "fontWeight": {
      "$description": "Font weight scale",
      
      "thin": {
        "$value": 100,
        "$description": "Thin weight",
        "$type": "fontWeight"
      },
      "light": {
        "$value": 300,
        "$description": "Light weight",
        "$type": "fontWeight"
      },
      "regular": {
        "$value": 400,
        "$description": "Regular weight",
        "$type": "fontWeight"
      },
      "medium": {
        "$value": 500,
        "$description": "Medium weight",
        "$type": "fontWeight"
      },
      "semibold": {
        "$value": 600,
        "$description": "Semi-bold weight",
        "$type": "fontWeight"
      },
      "bold": {
        "$value": 700,
        "$description": "Bold weight",
        "$type": "fontWeight"
      },
      "black": {
        "$value": 900,
        "$description": "Black weight",
        "$type": "fontWeight"
      }
    },
    
