{
  "name": "@terroir/core",
  "version": "0.1.0",
  "description": "Core design tokens and utilities for the Terroir Design System",
  "keywords": [
    "design-system",
    "design-tokens",
    "style-dictionary",
    "material-design",
    "accessibility",
    "wcag"
  ],
  "homepage": "https://github.com/terroir-ds/core/tree/main/packages/core#readme",
  "bugs": {
    "url": "https://github.com/terroir-ds/core/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/terroir-ds/core.git",
    "directory": "packages/core"
  },
  "license": "MIT",
  "author": "Terroir Core Contributors",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./colors": {
      "types": "./dist/colors/index.d.ts",
      "import": "./dist/colors/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/utils/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "pnpm clean && tsc",
    "build:ts": "tsc",
    "clean": "del dist",
    "dev": "tsc --watch",
    "prepublishOnly": "pnpm test && pnpm build",
    "postpublish": "echo 'Published @terroir/core version:' $npm_package_version",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@material/material-color-utilities": "^0.3.0",
    "@t3-oss/env-core": "^0.13.8",
    "p-debounce": "^4.0.0",
    "p-retry": "^6.2.1",
    "p-throttle": "^7.0.0",
    "serialize-error": "^12.0.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@types/node": "^24.0.4",
    "typescript": "^5.7.3"
  },
  "peerDependencies": {
    "pino": "^9.0.0"
  },
  "peerDependenciesMeta": {
    "pino": {
      "optional": true
    }
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  }
}
