{
  "$schema": "https://typedoc.org/schema.json",
  "name": "Terroir Core Design System",
  "readme": "../README.md",
  "entryPoints": [
    "../lib/index.ts"
  ],
  "entryPointStrategy": "expand",
  "out": "../docs/api",
  "json": "../docs/api/typedoc.json",
  "exclude": [
    "**/node_modules/**",
    "**/__tests__/**",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/scripts/**",
    "**/tests/**"
  ],
  "includeVersion": true,
  "tsconfig": "../tsconfig.typedoc.json",
  "plugin": [
    "typedoc-plugin-markdown"
  ],
  "theme": "markdown",
  "githubPages": false,
  "hideGenerator": true,
  "excludePrivate": true,
  "excludeInternal": true,
  "excludeNotDocumented": false,
  "excludeExternals": false,
  "disableSources": false,
  "categorizeByGroup": true,
  "searchCategoryBoosts": {
    "Components": 2,
    "Utils": 1.5,
    "Types": 1
  },
  "categoryOrder": [
    "Core",
    "Components",
    "Colors",
    "Typography", 
    "Spacing",
    "Utils",
    "Types",
    "Errors",
    "*"
  ],
  "navigation": {
    "includeCategories": true,
    "includeGroups": true,
    "includeFolders": true
  },
  "visibilityFilters": {
    "protected": false,
    "private": false,
    "inherited": true,
    "external": false
  },
  "commentStyle": "jsdoc",
  "blockTags": [
    "@alpha",
    "@beta",
    "@category",
    "@defaultValue",
    "@deprecated", 
    "@example",
    "@experimental",
    "@group",
    "@hidden",
    "@ignore",
    "@internal",
    "@label",
    "@link",
    "@module",
    "@namespace",
    "@override",
    "@packageDocumentation",
    "@param",
    "@private",
    "@property",
    "@protected",
    "@public",
    "@readonly",
    "@remarks",
    "@returns",
    "@sealed",
    "@see",
    "@since",
    "@static",
    "@throws",
    "@todo",
    "@typeParam",
    "@virtual",
    "@component",
    "@prop",
    "@slot",
    "@cssProperties",
    "@accessibility"
  ],
  "inlineTags": [
    "@link",
    "@linkcode",
    "@linkplain"
  ],
  "modifierTags": [
    "@public",
    "@private",
    "@protected",
    "@readonly",
    "@override",
    "@sealed",
    "@virtual",
    "@static",
    "@abstract",
    "@alpha",
    "@beta",
    "@experimental",
    "@deprecated",
    "@hidden",
    "@ignore",
    "@internal"
  ],
  "validation": {
    "notExported": true,
    "invalidLink": true,
    "notDocumented": false
  },
  "requiredToBeDocumented": [
    "Enum",
    "EnumMember",
    "Variable",
    "Function",
    "Class",
    "Interface",
    "Property",
    "Method",
    "Accessor",
    "TypeAlias"
  ],
  "kindSortOrder": [
    "Module",
    "Namespace",
    "Class",
    "Interface", 
    "TypeAlias",
    "Enum",
    "EnumMember",
    "Function",
    "Variable",
    "Property",
    "Method",
    "Constructor",
    "Accessor"
  ]
}