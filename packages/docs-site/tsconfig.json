{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@terroir/core": ["../../lib"],
      "@terroir/core/*": ["../../lib/*"]
    },
    "types": ["astro/client"],
    "jsx": "react-jsx",
    "skipLibCheck": true
  },
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist", "node_modules"]
}
